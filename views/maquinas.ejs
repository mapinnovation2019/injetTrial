<!DOCTYPE html>
<html lang=en>
    <head>
        <title>InjetTV - Performance Máquinas</title>
        <meta charset=UTF-8>
        <meta name=viewport content="width=device-width, initial-scale=1">
        <link rel=stylesheet href=/assets/css/materialize.min.css />
        <link rel=stylesheet href=/styles/css/maquinas.css />
        <link href=https://fonts.googleapis.com/icon?family=Material+Icons rel=stylesheet>
        <style>
        img {
            position: absolute;
            right: 0;
            top: 0;
            margin: 25px 25px 0 0;
        }
    </style>
        <script>
            let secondsTransition = '<%=secondsTransition%>';
            let nextPage = '<%=nextPage%>';
        </script>
    </head>
    <body style="background-color: <%=cor_fundo%>;">
        <img src="<%=logo%>" alt=logo width=100 height=100>
        <main>
            <div class=row>
                <div class=row>
                    <div class="col s12">
                        <span>Mostrar Grupo/Máquinas</span>
                    </div>
                </div>
                <h1 class=center-align>Performance Máquinas</h1>
                <div class=container>
                    <div class="col l12">
                        <div class="descricao row valign-wrapper">
                            <div class="item flex-item-1 grow0">
                            </div>
                            <div class="item flex-item-1 grow0">
                            </div>
                            <div class="item flex-item-1">
                                Máquina
                            </div>
                            <div class="item flex-item-1">
                                Descrição do produto
                            </div>
                            <div class="item flex-item-1">
                                OEE
                            </div>
                        </div>
                        <% pts.forEach((pt) => { %>
                            <div class="row valign-wrapper flex">
                                <div class="item flex-item-1 grow0">
                                    <i class="large material-icons" style='color: <%= pt.icone.caminhoIcone %>'>lens</i>
                                </div>
                                <div class="item flex-item-1 grow0">
                                    <i class="large material-icons" style='color: <%= pt.icone.corTriangulo %>'>lens</i>
                                </div>
                                <div class="item flex-item-1" style="color: <%= pt.icone.caminhoIcone %>">
                                    <%= pt.cdPt %>
                                </div>
                                <div class="item flex-item-1" style="color: <%= pt.icone.caminhoIcone %>">
                                    <%= pt.dsProduto %>
                                </div>
                                <div class="item flex-item-1" style="color: <%= pt.icone.caminhoIcone %>">
                                    <%= pt.indicadores.indiceProdutividadeOEE %>%
                                </div>
                            </div>
                        <% }) %>
                    </div>
                </div>
            </div>
        </main>
        <script src=/assets/jquery.min.js></script>
        <script src=/scripts/carousel.js></script>
    </body>
</html>